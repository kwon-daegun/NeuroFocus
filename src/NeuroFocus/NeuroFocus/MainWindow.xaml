        <Style TargetType="ToolTip">
            <Setter Property="Background" Value="{StaticResource ThemeClr}"/>
            <Setter Property="Placement" Value="Center"/>
            <Setter Property="VerticalOffset" Value="-45"/>
            <Setter Property="HorizontalOffset" Value="0"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToolTip">
                        <Border Background="{StaticResource ThemeClr}"
                                CornerRadius="10"
                                Padding="10"
                                BorderThickness="2"
                                BorderBrush="{StaticResource HoverIcon}">
                            <ContentPresenter TextBlock.Foreground="{StaticResource HoverIcon}"
                                              TextBlock.FontWeight="SemiBold"
                                              TextBlock.FontSize="12"
                                              TextBlock.FontFamily="{StaticResource Outfit}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="NavButtons" TargetType="RadioButton">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="{StaticResource ActiveBg}"/>
            <Setter Property="Foreground" Value="{StaticResource IconDefault}"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="ToolTipService.InitialShowDelay" Value="300"/>
            <Setter Property="ToolTipService.ShowDuration" Value="5000"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="ButtonBorder"
                                Background="Transparent"
                                CornerRadius="12"
                                Padding="{TemplateBinding Padding}">
                            <Path x:Name="IconPath" 
                                  Data="{TemplateBinding Tag}"
                                  Fill="{TemplateBinding Foreground}"
                                  Stretch="Uniform"
                                  Height="18"
                                  Width="18"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="{StaticResource HoverBg}"/>
                                <Setter TargetName="IconPath" Property="Fill" Value="{StaticResource HoverIcon}"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="{StaticResource ActiveBg}"/>
                                <Setter TargetName="IconPath" Property="Fill" Value="{StaticResource ActiveIcon}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <ContentControl x:Name="ActiveView" MaxWidth="1220" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

        <Border VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,15" 
                Padding="10" Background="{StaticResource ToolBarBg}" CornerRadius="20" Panel.ZIndex="10">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Border Padding="10" Margin="0,0,5,0">
                    <Path Fill="{StaticResource ActiveIcon}" Stretch="Uniform" Height="20" Width="20" 
                          Data="{StaticResource BrainIcon}"/>
                </Border>
                <Rectangle Width="1" Height="30" Fill="#444" VerticalAlignment="Center" Margin="0,0,10,0"/>

                <RadioButton Style="{StaticResource NavButtons}" ToolTip="Dashboard" GroupName="MenuBar" IsChecked="True" Tag="{StaticResource DashboardIcon}"></RadioButton>
                <RadioButton Style="{StaticResource NavButtons}" ToolTip="Focus" GroupName="MenuBar" Tag="{StaticResource FocusIcon}"></RadioButton>
                <RadioButton Style="{StaticResource NavButtons}" ToolTip="Sensory" GroupName="MenuBar" Tag="{StaticResource SensoryIcon}"></RadioButton>
                <RadioButton Style="{StaticResource NavButtons}" ToolTip="Tasks" GroupName="MenuBar" Tag="{StaticResource TasksIcon}"></RadioButton>
                <RadioButton Style="{StaticResource NavButtons}" ToolTip="Timer" GroupName="MenuBar" Tag="{StaticResource TimerIcon}"></RadioButton>
                <RadioButton Style="{StaticResource NavButtons}" ToolTip="Presets" GroupName="MenuBar" Tag="{StaticResource PresetsIcon}"></RadioButton>
                <RadioButton Style="{StaticResource NavButtons}" ToolTip="Settings" GroupName="MenuBar" Tag="{StaticResource SettingsIcon}"></RadioButton>

                <Rectangle Width="1" Height="30" Fill="#444" VerticalAlignment="Center" Margin="10,0"/>

                <RadioButton Style="{StaticResource NavButtons}" ToolTip="Search" GroupName="MenuBar" Tag="{StaticResource SearchIcon}"></RadioButton>
            </StackPanel>
        </Border>
    </Grid>
</Window>
