<Application x:Class="NeuroFocus.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:NeuroFocus"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Fonts -->
        <FontFamily x:Key="Outfit">UI/Assets/Fonts/Outfit/#Outfit</FontFamily>
        <FontFamily x:Key="JetBrains">UI/Assets/Fonts/JetBrainsMono/#JetBrainsMono</FontFamily>
        
        <!-- Colors -->
        <SolidColorBrush x:Key="ThemeClr" Color="#111715"/>
        <SolidColorBrush x:Key="TextClr" Color="#81988c"/>
        <SolidColorBrush x:Key="ActiveIcon" Color="#53a285"/>
        <SolidColorBrush x:Key="ActiveBg" Color="#1f2f29"/>
        <SolidColorBrush x:Key="StatusBg" Color="#172923"/>
        <SolidColorBrush x:Key="StatusText" Color="#51c098"/>
    </Application.Resources>
</Application>
